# ===========================================
# RMS Platform Environment Configuration
# ===========================================

# Application
NODE_ENV=development
APP_NAME=RMS Platform
APP_URL=http://localhost:3000
API_URL=http://localhost:4000

# Backend
PORT=4000
BACKEND_PORT=4000
BACKEND_HOST=0.0.0.0

# Frontend
FRONTEND_PORT=3000
FRONTEND_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:4000
NEXT_PUBLIC_PUSHER_KEY=your-pusher-key
NEXT_PUBLIC_PUSHER_CLUSTER=us2

# CORS (additional allowed origin, e.g. your Vercel frontend URL)
CORS_ORIGIN=

# Database - PostgreSQL
DATABASE_URL="postgresql://rms_user:rms_password@localhost:5432/rms_db?schema=public"
DIRECT_URL="postgresql://rms_user:rms_password@localhost:5432/rms_db?schema=public"
DB_HOST=localhost
DB_PORT=5432
DB_NAME=rms_db
DB_USER=rms_user
DB_PASSWORD=rms_password

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6379

# MongoDB (for chat/messages)
MONGODB_URI=mongodb://localhost:27017/rms_chat

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_REFRESH_EXPIRES_IN=30d

# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key

# Email (SMTP)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-email-password
SMTP_FROM=noreply@rms-platform.com

# SMS (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Push Notifications (Firebase)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY=your-firebase-private-key
FIREBASE_CLIENT_EMAIL=your-firebase-client-email

# Vercel Blob (File Storage)
BLOB_READ_WRITE_TOKEN=your-vercel-blob-token

# Pusher (Real-time)
PUSHER_APP_ID=your-pusher-app-id
PUSHER_KEY=your-pusher-key
PUSHER_SECRET=your-pusher-secret
PUSHER_CLUSTER=us2

# Cron Jobs
CRON_SECRET=your-cron-secret-change-in-production

# Multi-tenancy
MASTER_DATABASE_URL="postgresql://rms_user:rms_password@localhost:5432/rms_master?schema=public"

# OpenAI (AI Features)
OPENAI_API_KEY=your-openai-api-key

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=debug
LOG_FORMAT=combined

# Commission Configuration
DEFAULT_COMMISSION_RATE=0.03
BRONZE_COMMISSION_RATE=0.03
SILVER_COMMISSION_RATE=0.035
GOLD_COMMISSION_RATE=0.04
PLATINUM_COMMISSION_RATE=0.05

# Tax Configuration
DEFAULT_TAX_RATE=0.15

# Loyalty Points Configuration
POINTS_PER_SALE=100
BRONZE_THRESHOLD=0
SILVER_THRESHOLD=5000
GOLD_THRESHOLD=15000
PLATINUM_THRESHOLD=50000
