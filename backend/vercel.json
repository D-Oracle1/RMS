{
  "version": 2,
  "installCommand": "npm install --legacy-peer-deps",
  "buildCommand": "npm run build && npx prisma migrate deploy",
  "functions": {
    "api/index.ts": {
      "maxDuration": 60,
      "memory": 1024,
      "includeFiles": "{dist/**,src/generated/**,node_modules/.prisma/**,node_modules/@prisma/engines/**,prisma/**}"
    }
  },
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/api/index.ts"
    }
  ]
}
